@{
	ViewData["Title"] = "Log In ";
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Login</title>
	<link rel="stylesheet" href="login.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer"
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>/>
</head>
<body>

	<div class="login-container">
		<div class="login-form">
			<h2>Login</h2>
			<div class="form-group">
				<label for="username"><i class="fas fa-user"></i> Username</label>
				<input type="text" id="username" name="username" placeholder="Enter your username">
			</div>
			<div class="form-group">
				<label for="password"><i class="fas fa-lock"></i> Password</label>
				<input type="password" id="password" name="password" placeholder="Enter your password">
			</div>
			<div class="form-group">
				<a asp-controller="Home" asp-action="Index" class="greenButton">Login</a>
			</div>
			<div class="form-group">
				<a href="#" style="color: #c9e265">Forgot Password?</a>
			</div>
			<div class="form-group">
				<p>Don't have an account? <a style="color: #c9e265">Sign up</a></p>
			</div>
		</div>
	</div>


	<style>
		body {
			font-family: sans-serif;
			background-color: #f4f4f4;
			margin: 0;
			padding: 0;
			display: flex;
			justify-content: center;
			align-items: center;
			min-height: 100vh;
		}

		.login-container {
			background-color: #fff;
			border-radius: 10px;
			box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
			overflow: hidden;
			width: 400px;
			max-width: 90%;
		}

		.login-form {
			padding: 30px;
		}

			.login-form h2 {
				text-align: center;
				margin-bottom: 30px;
				color: #333;
			}

			.login-form a {
				text-decoration: none;
				display: block;
				text-align: center;
				font-size: 0.9em;
			}

		.form-group {
			margin-bottom: 20px;
		}

			.form-group label {
				display: block;
				font-weight: bold;
				margin-bottom: 5px;
				color: #555;
			}

			.form-group input {
				width: 92%;
				padding: 12px;
				border: 1px solid #ddd;
				border-radius: 5px;
				font-size: 1em;
				outline: none;
			}

				.form-group input:focus {
					border-color: #007bff;
				}

		.greenButton {
			background-color: #c9e265;
			color: white;
			padding: 14px;
			border: none;
			border-radius: 5px;
			width: 92%;
			text-align: center;
		}

			.greenButton:hover {
				background-color: #c9e268;
				color: white;
			}

		.form-group p {
			text-align: center;
			font-size: 0.9em;
			color: #777;
		}

		.form-group p {
			font-weight: bold;
		}

		.form-group label i { /* Style for icons*/
			margin-right: 5px;
			color: #777;
		}

	</style>
</body>
</html>

